<!-- 背景＆中央寄せ -->
<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <!-- ログインフォーム本体 -->
  <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-lg">
    <h1 class="text-3xl font-bold text-center mb-2">ログイン</h1>
    <p class="text-center text-yellow-800 mb-6">パスワードをお忘れの方はこちら</p>

    <% if flash[:alert] %>
      <div class="mb-4 text-center text-red-600 font-semibold">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_with url: login_path, local: true, data: { turbo: false } do |f| %>
      <div class="mb-4">
        <%= f.label :email, "メールアドレス", class: "block mb-1 font-semibold" %>
        <%= f.email_field :email, class: "w-full px-4 py-2 rounded bg-gradient-to-r from-purple-400 to-blue-400 text-white placeholder-white focus:outline-none focus:ring-2 focus:ring-purple-500" %>
      </div>

      <div class="mb-6">
        <%= f.label :password, "パスワード", class: "block mb-1 font-semibold" %>
        <%= f.password_field :password, class: "w-full px-4 py-2 rounded bg-gradient-to-r from-purple-400 to-blue-400 text-white placeholder-white focus:outline-none focus:ring-2 focus:ring-purple-500" %>
      </div>

      <%= f.submit "ログインする", class: "w-full border border-black text-black font-bold py-3 rounded-full hover:bg-black hover:text-white transition-colors duration-300" %>
    <% end %>

    <div class="mt-6 text-center">
      <%= link_to "アカウント新規作成はこちら", signup_path, class: "text-yellow-800 hover:underline font-semibold" %>
    </div>
  </div>
</div>
